
@{
    /**/
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
@model IEnumerable<BaiThiMau.Models.Entity.tDanhMucSP>


@if (Model.Count() > 0)
{
    

    foreach (var item in Model)
    {
        <div class="col-sm-3 item">
            <a href="/layout/LoadDetails/@item.MaSP">
                <div class="panel-default ">
                    <div class="itemhover">
                        <div class="panel-body">
                            <img src="~/Images/@item.Anh" alt="Balo">
                        </div>
                        <div class="panel-footer">
                            @item.TenSP;

                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
}

else
{
    <p style="height: 600px"></p>
}


